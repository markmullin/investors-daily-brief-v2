# Dockerfile for Qwen3 1.7B on Render CPU
FROM ubuntu:22.04

# Install dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Ollama
RUN curl -fsSL https://ollama.com/install.sh | sh

# Create app directory
WORKDIR /app

# Download Qwen3 1.7B model at build time
# This ensures the model is ready when container starts
RUN ollama serve & \
    sleep 10 && \
    ollama pull qwen3:1.7b && \
    pkill ollama

# Expose Ollama port
EXPOSE 11434

# Start Ollama server
CMD ["ollama", "serve", "--host", "0.0.0.0"]
